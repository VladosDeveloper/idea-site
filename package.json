{
  "name": "idea-site",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @idea-site/backend",
    "f": "pnpm --filter @idea-site/client",
    "types": "concurrently \"pnpm b types\" \"pnpm f types\" ",
    "dev": "concurrently \"pnpm b dev\" \"pnpm f dev\" ",
    "prettify": "pnpm -r --parralel prettify ",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
